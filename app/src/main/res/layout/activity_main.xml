<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ConstraintLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:id="@+id/randomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:onClick="goToRandomPageActivity"
        android:text="@string/random_page" />

    <Button
        android:id="@+id/recentUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/randomButton"
        android:layout_centerInParent="true"
        android:onClick="goToRecentlyUpdatedActivity"
        android:text="@string/recently_updated" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recentUpdate"
        android:layout_centerInParent="true"
        android:text="@string/search" />
</RelativeLayout>